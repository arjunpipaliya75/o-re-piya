#include<stdio.h>
int main()
{
	int i,j,total[3]={0},roll[3],marks[9],per[3]={0};
	
	for(i=0;i<3;i++)
	
 	{
		printf("\n\nenter student roll no:-");
		scanf("%d",&roll[i]);

		for (j=0;j<3;j++)
		{
		printf("enter the marks of subject %d:-",i+1);
		scanf("%d",&marks[j]);
		total[i]+=marks[j];
		per[i]=(total[i]/3);
		}
		printf("total marks :%d",total[i]);
		printf("\nthe percentages of student :--%d%",per[i]);
	}
	
	
	
	return 0;
}
